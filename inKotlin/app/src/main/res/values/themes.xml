<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAndMortyApp" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.DarkOverlay" parent="@style/ThemeOverlay.Material3.Dark"/>
    <style name="TextAppearance.Widget.CollapsingToolbarLayout" parent="@style/Widget.Design.CollapsingToolbar">
        <item name="collapsedTitleTextColor">@color/white</item>
        <item name="contentScrim">?colorPrimary</item>

    </style>
    <style name="Theme.RickAndMortyApp.ThemeNoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>